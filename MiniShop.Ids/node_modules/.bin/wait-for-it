#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/bash" ]; then
  exec "$basedir/bash"  "$basedir/../wait-for-it.sh/bin/wait-for-it" "$@"
else 
  exec bash  "$basedir/../wait-for-it.sh/bin/wait-for-it" "$@"
fi
